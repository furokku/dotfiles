# display rofi power menu
bindsym $mod+Shift+e         exec rofi -show p -modi p:~/.config/rofi/rofi-power-menu

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # bind arrows to resize windows
        bindsym Left         resize shrink width 7 px or 7 ppt
        bindsym Down         resize grow height 7 px or 7 ppt
        bindsym Up           resize shrink height 7 px or 7 ppt
        bindsym Right        resize grow width 7 px or 7 ppt

        bindsym Shift+Left   focus left
        bindsym Shift+Down   focus down
        bindsym Shift+Up     focus up
        bindsym Shift+Right  focus right

        bindsym Ctrl+Left    move left
        bindsym Ctrl+Down    move down
        bindsym Ctrl+Up      move up
        bindsym Ctrl+Right   move right
        
        # back to normal: Enter or Escape or $mod+r
        bindsym Return       mode "default"
        bindsym Escape       mode "default"
        bindsym $mod+r       mode "default"
}

bindsym $mod+r mode "resize"

