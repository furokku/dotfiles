font pango:monospace 8

# function volume
set $volume_up               exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2%
set $volume_down             exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2%
set $volume_mute             exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
set $mic_mute                exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

bindsym $mod+F3              $volume_up
bindsym $mod+F2              $volume_down
bindsym $mod+F1              $volume_mute
bindsym $mod+F4              $mic_mute
bindsym XF86AudioRaiseVolume $volume_up
bindsym XF86AudioLowerVolume $volume_down
bindsym XF86AudioMute        $volume_mute
bindsym XF86AudioMicMute     $mic_mute

floating_modifier            $mod
bindsym $mod+Return          $exec bash -c 'WINIT_X11_SCALE_FACTOR=1 alacritty'
bindsym $mod+q               kill

# change focus
