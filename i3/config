# app launching mode
bindsym $mod+Shift+d         mode "app launching"
mode "app launching" {
    bindsym d                exec discord-canary
    bindsym f                exec fetchcord --nohost --nohardware --noshell
    bindsym c                exec code
    bindsym v                exec viber
    bindsym s                exec com.spotify.Client
    bindsym g                exec steam -silent
    bindsym Escape           mode "default"
    bindsym Return           mode "default"
}

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# function volume
set $volume_up               exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2%
set $volume_down             exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2%
set $volume_mute             exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
set $mic_mute                exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
set $refresh_i3status        killall -SIGUSR1 i3status

bindsym $mod+F3              $volume_up      && $refresh_i3status 
bindsym $mod+F2              $volume_down    && $refresh_i3status
bindsym $mod+F1              $volume_mute    && $refresh_i3status
bindsym $mod+F4              $mic_mute       && $refresh_i3status
bindsym XF86AudioRaiseVolume $volume_up      && $refresh_i3status
bindsym XF86AudioLowerVolume $volume_down    && $refresh_i3status
bindsym XF86AudioMute        $volume_mute    && $refresh_i3status
bindsym XF86AudioMicMute     $mic_mute       && $refresh_i3status

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

floating_modifier            $mod
bindsym $mod+Return          exec bash -c 'WINIT_X11_SCALE_FACTOR=1 alacritty'
bindsym $mod+q               kill

