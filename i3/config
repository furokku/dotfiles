# app launching mode
bindsym $mod+Shift+d         mode "app launching"
mode "app launching" {
    bindsym d                $exec discord-canary
    bindsym f                $exec fetchcord --nohost --nohardware --noshell
    bindsym c                $exec code
    bindsym v                $exec viber
    bindsym s                $exec com.spotify.Client
    bindsym g                $exec steam -silent
    bindsym Escape           mode "default"
    bindsym Return           mode "default"
}

# Font for window titles. Will also be used by the bar unless a different font
